---
interface Props {
  code: string;
  language?: string;
  title?: string;
}

const { code, language = 'text', title } = Astro.props;
---

<div class="relative rounded-lg border border-border bg-muted/50 overflow-hidden">
  {title && (
    <div class="border-b border-border bg-muted px-4 py-2">
      <span class="text-xs font-medium text-muted-foreground">{title}</span>
    </div>
  )}
  <pre class="p-4 text-sm overflow-x-auto">
    <code class={`language-${language}`}>{code}</code>
  </pre>
</div>
